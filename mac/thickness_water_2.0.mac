# Configuración automática para water con espesor 2.0 cm
/run/initialize
/control/verbose 0
/run/verbose 0
/tracking/verbose 0

/detector/setMaterial water
/detector/setThickness 2.0 cm

# Configurar fuente (Cs-137)
/gun/particle gamma
/gun/energy 662 keV
/gun/position 0 0 -10 cm
/gun/direction 0 0 1

/run/beamOn 100000
